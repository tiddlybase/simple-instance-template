{
  "firestore": {
    "rules": "etc/firestore.rules"
  },
  "hosting": {
      "public": "family/public",
      "rewrites": [
        {
          "source": "**",
          "destination": "/outer.html"
        }
      ],
      "ignore": [
        "**/types/**",
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "files",
        "files/**",
        "public/files",
        "public/files/**"
      ],
      "headers": [ {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|woff2|font.css|json)",
        "headers": [ {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
            } ]
        } ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  }
}
